extends ../../../templates/template

append page-info
    - title = 'Home'
    - description = 'Welcome home'
    - keywords = 'home, keyword2'
 
block content
    h1 Tracking
        .ui.form.segment
          .field
            label Receive our newsletter
            .ui.left.labeled.icon.input
              input(type='text', placeholder='Email')
              i.mail.icon
              .ui.corner.label
                i.asterisk.icon
          .huge.green.ui.labeled.icon.button
                   i.signup.icon
                   | Sign up
      a(href='/signup', data-metric='Signup intention', data-metric-plan='free') Signup Link
      button.button(data-metric='Button') Button

      a(href='skype:mid-centuryonline.com?chat', data-metric='Contact', data-metric-type='skype')
        | skype
      a(href='mailto:info@mid-centuryonline.com', data-metric='Contact', data-metric-type='email')
        | email
      div(data-metric='Floor Lamps', data-metric-page-view='true', data-metric-page-category='Lighting')





     



