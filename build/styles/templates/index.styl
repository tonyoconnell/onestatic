global-reset()

body
  center(page-width)

.content
  center(content-width)
  +mobile
    padding 5px !important
    margin 10px !important
  +tablet()
    padding 10px 
  +desktop()
    padding 10px 20px 
      
header
  center(page-width)
  min-width 100% !important 
  .content
      box-shadow: 0px 5px 3px -3px #ccc;

#screen
  background white

#top-picture
  margin-bottom 10px  

main
  center(page-width)
  padding 10px
  

footer
  center(100%)
  dark-background()

footer .box
  margin 40px
  +tablet()
    column(1/2, uncycle: 4, cycle: 2)
  +desktop()
    column (4/16)
  font-size 90%

footer .box li 
  padding 10px
  color grey

footer a
  color grey


  


.grid .box
  margin-bottom 20px 

.grid-3
  .box
    column(1/3, cycle: 3)
  +mobile()
     stack()  
    
.grid-4
  .box
    column(1/4, cycle: 4)
  +mobile()
    stack()
    
.grid-5
  .box
    column(1/5, cycle: 5)
  +mobile()
    stack()  

.grid-6
  .box
    column(1/6, cycle: 6)
    +mobile()
      stack()


article
  center(800px)

.two-columns-left #middle
  center(100%)
  
.home #middle
  center(100%)
  
article.two-columns-left 
  column(3/4)
  shift(1/4)
  
aside.two-columns-left 
  column(1/4)
  shift(-3/4)
  
article.two-columns-right 
  column(3/4)
  
aside.two-columns-right 
  column(1/4)

two-columns-left
  column(3/4)
  shift(1/4)

two-columns-right
  column(3/4)
  
// .home article
//  @extend two-columns-right

.home .grid
  @extend .grid-5

#category .grid
  @extend .grid-4

.home .grid .box .item
  background #111
  color white
  height 100px
  text-align center
  &:hover 
    background darkred

.middle
  text-align center
  position relative
  top 50%
  transform translateY(-50%)  

.home .grid .box .item .name
    @extend .middle

.home .grid .box .item .name a
  color white

  