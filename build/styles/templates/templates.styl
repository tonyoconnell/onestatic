// Remove all default browser styles
global-reset()

/*********************
         Body
*********************/         

body
  center(page-width) // Page-width is defined in my.styl (usually 100%)

.content
  center(content-width)  // Content-width is defined in my.styl 
  +mobile
    padding 5px !important
    margin 10px !important
  +tablet()
    padding 10px 
  +desktop()
    padding 10px 20px 

/*********************
         Header
*********************/ 
      
header
  center(page-width)
  min-width 100% !important 
  .content
      box-shadow: 0px 5px 3px -3px #ccc;

#screen
  background white

#top-picture
  margin-bottom 10px  

#middle
  center(page-width)
  
/*********************
         Footer
*********************/ 

footer
  center(100%)
  dark-background()

footer .box
  margin 40px
  +tablet()
    column(1/2, uncycle: 4, cycle: 2)
  +desktop()
    column (4/16)
  font-size 90%

footer .box li 
  padding 10px
  color grey

footer a
  color grey

/*********************
         Grid
*********************/ 
// Short cuts for grid layout. 
// To layout any items in a grid just give it a class of grid and the number of columns
// example grid(4)


grid(n)
  .box
    column(1/n, cycle: n)
    +mobile()
     stack()

.grid .box
  margin-bottom 20px 
  
/*********************
         Layout
*********************/ 
article
  center(800px)

#block-one
  display none  // This hides the sidebars until you give the body a class that contains columns
#block-two
  display none
    
two-columns-left()
  main
    column(3/4)
    shift(1/4)
  #block-one
    display block
    column(1/4)
    shift(-3/4)
    
two-columns-right()
  main
    column(3/4)
  #block-one
    display block
    column(1/4)
  
three-columns()
  main
    center(100%)
    column(3/5)
    shift(1/5)
  #block-one
    display block
    column(1/5)
    shift(-3/5)
  #block-two
    display block
    column(1/5)

.two-columns-left
  two-columns-left()

.two-columns-right
  two-columns-right()

.three-columns
  three-columns()

.middle
  text-align center
  position relative
  top 50%
  transform translateY(-50%)  
  

  