// Remove all default browser styles
global-reset()

/*********************
         Body
*********************/         

body
  center(page-width) // Page-width is defined in my.styl (usually 100%)

.content
  center(content-width)  // Content-width is defined in my.styl 
  +mobile
    padding 5px !important
    margin 10px !important
  +tablet()
    padding 10px 
  +desktop()
    padding 10px 20px 

/*********************
         Header
*********************/ 
      
header
  center(page-width)
  min-width 100% !important 
  .content
      box-shadow: 0px 5px 3px -3px #ccc;

#screen
  background white

#top-picture
  margin-bottom 10px  

main
  center(page-width)
  
/*********************
         Footer
*********************/ 

footer
  center(100%)
  dark-background()

footer .box
  margin 40px
  +tablet()
    column(1/2, uncycle: 4, cycle: 2)
  +desktop()
    column (4/16)
  font-size 90%

footer .box li 
  padding 10px
  color grey

footer a
  color grey

/*********************
         Grid
*********************/ 
// Short cuts for grid layout. 
// To layout any items in a grid just give it a class of grid and the number of columns
// example grid(4)


grid(n)
  .box
    column(1/n, cycle: n)
    +mobile()
     stack()

.grid .box
  margin-bottom 20px 
  
/*********************
         Article
*********************/ 

article
  center(800px)

.two-columns-left #middle
  center(100%)
  
.home #middle
  center(100%)
  
article.two-columns-left 
  column(3/4)
  shift(1/4)
  
aside.two-columns-left 
  column(1/4)
  shift(-3/4)
  
article.two-columns-right 
  column(3/4)
  
aside.two-columns-right 
  column(1/4)

two-columns-left
  column(3/4)
  shift(1/4)

two-columns-right
  column(3/4)
  

.middle
  text-align center
  position relative
  top 50%
  transform translateY(-50%)  
  

  