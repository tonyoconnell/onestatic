nav
  margin-top -5px
  +tablet
    column(1/2)
  +desktop
    column(1/2)

nav  ul
    list-style none
    +tablet()
      margin-top 15px
      float right
    +desktop()
      margin-top 15px
      float right  

nav  li
    display inline-block
    padding 10px 15px
    cursor pointer
    -webkit-transition all 0.2s
    -moz-transition all 0.2s
    -ms-transition all 0.2s
    -o-transition all 0.2s
    transition all 0.2s
    &:hover
      background #111
      color #fff

#breadcrumbs
  padding 10px 0

#breadcrumbs ul
  list-style none
  margin 10px 0  
  
#breadcrumbs li
  display inline-block
  list-style none

.tag-cloud 
  padding-top 20px
  
.tag-cloud ul li 
  float: left
  margin: 4px 4px 4px 0
  height: 32px
  list-style none
  font-size 12px
  padding 0px 
  
.tag-cloud ul li a 
  padding 10px 17px
  color #cacaca
  border-radius 3px
  background #323232
  
.tag-cloud ul li:hover a 
  background #000000
  color #fff