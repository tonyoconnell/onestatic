@import 'libraries/jeet'
@import 'screens/positions'
@import 'libraries/rupture'

html, body
  margin 0
  padding 0
  width: 100%;
  height: 100%;

#screen
  light-background()


#content
  +mobile()
    padding 0px 10px
   +desktop()
    center(800px) 
    padding-top 20px
  
    
logo
  z-index 3
  fixed top left
  -webkit-backface-visibility: hidden;
  -webkit-transform: translateZ(0);
  +desktop()
    fixed top left

logo img 
  +mobile()
    width 30px
    height 30px    
  +tablet()
    width 50px
    height 50px  
  +desktop()
    width 60px
    height 60px          

header-search
  margin-right 30px
    
book 
  h1
    max-width 300px !important
    relative top 0px left 50px right 0px
    +desktop()
      relative top 0px left 0px
      font-size 40px
  


process
  ul
    li
      raquo()
img 
  max-width 100%
  
overview
  col(3/3)
  +above(900px)
    col(1/2)
    background blue
  
about 
  col(5/5)
  +above(900px)
    col(1/2)

.hidden
  display none
