@import 'libraries/jeet'
@import 'screens/positions'
@import 'libraries/rupture'

html, body
  margin 0
  padding 0
  width: 100%;
  height: 100%;

#screen
  position absolute
  light-background()
  top 0
  right 0
  bottom 0
  left 0
  width auto
  height auto
  overflow auto
  z-index 2
  -webkit-overflow-scrolling touch
  -webkit-transform translate3d(0, 0, 0)
  -moz-transform translate3d(0, 0, 0)
  -ms-transform translate3d(0, 0, 0)
  -o-transform translate3d(0, 0, 0)
  transform translate3d(0, 0, 0)

#content
    +desktop()
      center(800px) 
  
    
logo
  +mobile()
    fixed top left
  +desktop()
    fixed top left

logo img
  fixed top left
  

header-search
  margin-right 30px
    
book 
  h1
    max-width 300px !important
    relative top 0px left 50px right 0px
    +desktop()
      relative top 0px left 0px
      font-size 40px
  


process
  ul
    li
      raquo()
img 
  max-width 100%
  
overview
  col(3/3)
  +above(900px)
    col(1/2)
    background blue
  
about 
  col(5/5)
  +above(900px)
    col(1/2)

