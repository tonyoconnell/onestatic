/*
Logo 
=====
Point to your logo or simply replace the logo's with your own. 
*/

// Location of logo
logo = '../pictures/logo.png'

// High definition version of logo for retina screens
logo-xl = '../pictures/logo-xl.png'

/*
Colors 
=========
*/

// Your brand color. Used in logo, links, buttons etc.
primary-color = #111
// Complimentary colour used for hover and secondary buttons
secondary-color = goldenrod
// Dark color for font, backgrounds etc.
dark-color = #111
// Light color font, backgrounds etc.
light-color = white

/*
Patterns
========
See the /pictures/patterns folder for some beautiful subtle pattterns.
*/
// Light Background Patterns
light-background()
  background: url('../pictures/patterns/background.png') repeat
light-background-secondary()
  background: url('../pictures/patterns/furley.png') repeat
grey-background()
  background: url('../pictures/patterns/furley.png') repeat  
// Dark Background Patterns
dark-background()
  background: url('../pictures/patterns/stressed.png') repeat
  color light-color
  h1, h2, h3, h4, h5, h6
  	color light-color


/*
Typography
==========
*/

// Font : Your font
font = mco

// Font Size : The size of your font on the smallest screen (it grows with the size of your screen)
base-font-size = 16px

// Heading Font : Font for headings
font-headings = mco
    
// Line height 
p
  line-height 150%
  
// Margin
  margin = 10px 0

// Smallest Text  
.tiny 
  font-size 10px

/*
Layout
==========
Choose fixed (e.g. 1000px) or fluid  (e.g. 100%) width.
*/
// Width of the page
page-width = 100%

// Width of the content 
content-width = 100%

// Width of an article
article-width = 800px

/*
Template Style
===============
Choose the style of the blocks that build up your pages. 
*/

body
	light-background()

header
	background white
	
main 
  light-background()
	
footer
	dark-background()
	




