/*
Colors 
=========
*/

// Your brand color. Used in logo, links, buttons etc.
primary-color = #111
// Complimentary colour used for hover and secondary buttons
secondary-color = goldenrod
// Dark color for font, backgrounds etc.
dark-color = #111
// Light color font, backgrounds etc.
light-color = #eee

/*
Patterns
========
*/
// Light Background Patterns
light-background()
  background: url('/pictures/patterns/background.png') repeat
light-background-secondary()
  background: url('/pictures/patterns/furley.png') repeat
grey-background()
  background: url('/pictures/patterns/furley.png') repeat  
// Dark Background Patterns
dark-background()
  background: url('/pictures/patterns/stressed.png') repeat

/*
Logo 
=========
*/

// Location of logo
logo = '/pictures/logo.png'

// High definition version of logo for retina screens
logo-xl = '/pictures/logo-xl.png'

.logo-text  
  font-size 40px 
  
logo
  padding 2px 5px
logo img
  padding 5px
  border 0
  


/*
Type 
====
*/

// Font : Your font

font = mco
base-font-size = 16px

    
// Line height 
p
  line-height 150%
// Margin
  margin = 10px 0

// Smallest Text  
.tiny 
  font-size 10px

// Heading Font : Font for headings
font-headings = mco

@import 'typography'
@import 'libraries/nib'
@import 'libraries/axis'

body  
  font-face(mco, '../fonts')
  

