#home-top
  center(100%)      

#just-in
  center(100%)
  +mobile()
    column(3/3)
  +tablet()
    column(3/3)  
  +desktop()
    column(2/3)

#about
  +desktop()
    column(1/3)

.product-box
  +mobile()
    column(1/2)
  +tablet()
    col(1/3, cycle:3) 
  +desktop()
    column(1/3, cycle:3)
    font-size 80%
    
.on-sale img 
  height 61px
  width 72px
  float left
  margin-right 14px
  
.on-sale
  font-size 80%
  p 
    margin 0
    
.product-box
  span 
  margin-bottom 20px
  


