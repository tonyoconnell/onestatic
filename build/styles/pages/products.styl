.product-gallery
  padding 0
  margin 0
  +tablet()
    col(1/2)
    max-width 47%
  +desktop()
    col(.5)
    max-width 47%

.product-info
  margin 0
  padding 0
  +tablet()
    col(1/2)
    max-width 47%
  +desktop()
    col(.5)
    max-width 47%

#price
  font-size 150%
  margin-bottom 10px
 
 #short-description
   margin 20px 0
   
#description
  margin 20px 0 

#main
  +mobile()
    stack()
  +tablet()
    column(4/5)
  +desktop()
    column(4/5)  

#sidebar
  column(1/5)
  
.grid
  +mobile()
    stack()
  column(1/3, cycle: 3)
  margin-bottom 20px

.product .name
    margin 5px
  
.grid .product
  padding 4px
  border #ccc
  background white
  box-shadow: 0 10px 6px -6px #ccc;

.product-image
  padding 4px
  border #ccc
  background white
  box-shadow 0 10px 6px -6px #ccc

.product-name
  margin-top -15px
  
.product-filter
  padding 10px
  
li.level1
  margin 10px
  
li.level1 a
  font-weight normal
  font-size 90%

li.level0 a
  font-weight normal  
  font-size 110%
  
.toolbar-bottom
  display none
  
.bottom .icon-text
  color #111 !important
