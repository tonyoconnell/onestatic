global-reset()

body
  light-background()
  
header
  center(100%)
  height 40px
  background #fff
  box-shadow: 0px 5px 3px -3px #ccc;
  +mobile
    padding 5px
  +tablet()
    padding 10px
  +desktop()
    padding 20px
       
#screen
  background white

#top-picture
  margin-bottom 10px  

#middle
  center(100%)
  +mobile()
    margin 0px 5px
  +tablet()
    padding 0px 5px  
   +desktop()
    padding-left 20px
    padding-right 20px

  
.two-columns-left article
  column(3/4)
  shift(1/4)
  
.two-columns-left aside
  column(1/4)
  shift(-3/4)
  
.two-columns-right article
  column(3/4)
  
.two-columns-right aside
  column(1/4)


footer
  margin-top 40px
  center(100%)
  dark-background()
  color white
  padding 20px

footer .box
  +tablet()
    column(1/2, uncycle: 4, cycle: 2)
  +desktop()
    column (4/16)
  font-size 90%

footer .box li 
  padding 10px
  color grey

footer a
  color grey

#content
  center(800px)
  
.icon-text
    +mobile() 
      display none

.grid .box
  margin-bottom 20px 

.grid-3
  .box
    column(1/3, cycle: 3)
  +mobile()
     stack()  
    
.grid-4
  .box
    column(1/4, cycle: 4)
  +mobile()
    stack()
    
.grid-5
  .box
    column(1/5, cycle: 5)
  +mobile()
    stack()  

.grid-6
  .box
    column(1/6, cycle: 6)
    +mobile()
      stack()


  

.item
  padding 4px
  border #ccc
  background white
  box-shadow: 0 10px 6px -6px #ccc;

.home .grid
  @extend .grid-5

#category .grid
  @extend .grid-4

.home .grid .box .item
  background #111
  color white
  height 100px
  text-align center
  &:hover 
    background darkred

.middle
  text-align center
  position relative
  top 50%
  transform translateY(-50%)  

.home .grid .box .item .name
    @extend .middle

.home .grid .box .item .name a
  color white

  