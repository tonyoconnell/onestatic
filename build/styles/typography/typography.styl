// Display fonts on all devices
@import 'typography/font-face'

  
html, body
  font-family font
  color primary-color
  font-size base-font-size
  +tablet()
    font-size 110%
  +desktop()
    font-size 120%

p 
  margin 10px 0
  +tablet()
    margin 20px 0
  +desktop()
    margin 30px 0

h4 
  font-size 110%
  margin 10px 0

h3 
  font-size 120%
  margin 10px 0

h2 
  font-size 130%
  margin 10px 0

h1 
  font-size 180%
  margin 10px 0


// Links 
a
  color primary-color
  font-weight bold
  text-decoration none
  &:hover 
    color secondary-color
 
