/* =======================
        Contact Bar
======================== */

.contact-bar
  center(100%)
  background white
  padding 10px 5px 10px 0px
  a
    color black
    letter-spacing 1px
    text-decoration none
    display block
    float left
    padding 2px
    font-size 90%
a
  &:hover
    .circle
      i
        color goldenrod


.sign-in 
  float right
  color #111
  

        

.icon-text
    +mobile() 
      display none    
  


.heading-1
  color white!important
  background-repeat repeat
  margin 0px!important
  padding 0px
  h1
    color white!important
    margin 0px!important
    padding 10px
  span
    color white!important

.block-title
  padding 5px 10px 10px 10px!important
  margin-bottom 2px
  color white
  font-size 25px
  background url(../pictures/patterns/stressed.png)!important
  background-repeat repeat

.block-content
  background white