/**************************
        Side Blocks
***************************/


.block-title
  padding 5px 10px 10px 10px!important
  margin-bottom 2px
  color white
  font-size 25px
  background url(../pictures/patterns/stressed.png)!important
  background-repeat repeat

.block-content
  background #eee
  
/**************************
        Contact Bar
***************************/

.contact-bar
  center(100%)
  background white
  padding 5px 20px
  a
    color black
    text-decoration none
    display block
    float left
    padding 5px 5px 5px 5px
    font-size 90%
    vertical-align middle
  a
    &:hover
      .circle
        i
          color secondary-color


.sign-in 
  float right
  color #111
  
span.icon-text
  vertical-align middle

.icon-text
    +mobile() 
      display none    
  

header .contact-bar
  dark()


/**************************
        Accordian
***************************/
 
.accordian, .accordian::before, p
  transition .4s

.accordian
  cursor pointer
  ::before
    background url(blue-arrow.svg)
    transform rotate(-90deg)
  &.open
    &::before
      transform none
    & ~ .accordian
      transform translateY(4px)
    & + p
      opacity 1
      pointer-events auto
      transform translateY(8px)

.accordian p
  opacity 0
  pointer-events none

