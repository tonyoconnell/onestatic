/**************************
        Side Blocks
***************************/


.block-title
  padding 5px 10px 10px 10px!important
  margin-bottom 2px
  color white
  font-size 25px
  background url(../pictures/patterns/stressed.png)!important
  background-repeat repeat

.block-content
  background white
  
/**************************
        Contact Bar
***************************/

.contact-bar
  center(100%)
  background white
  padding 10px 5px 10px 0px
  a
    color black
    letter-spacing 0.5px
    text-decoration none
    display block
    float left
    padding 2px
    font-size 90%
    vertical-align middle
  a
    &:hover
      .circle
        i
          color secondary-color


.sign-in 
  float right
  color #111
  
span.icon-text
  vertical-align middle

.icon-text
    +mobile() 
      display none    
  

