/*******************************
             Logo
*******************************/
 #logo
  z-index 999999
  
#logo-fixed
  fixed left top
  z-index 999999999
  padding 10px
 
#logo-picture 
  float left
  width 35px
  height 35px
  padding-top 2px
  padding-left 2px
  +tablet()
    width 45px
    height 45px  
  +desktop()
    width 55px
    height 55px

#logo img 
  border 0 !important
  padding 5px
  background white
  border-radius 100%

#logo-text h1
  font-size 180%
  margin 10px
  float left
  padding-left 10px
  +tablet()
    margin-top 10px
  +desktop()
    margin-top 15px
    
#logo-text h1 a 
  color white !important
  
.logo-m
  max-width 550px

i 
  padding-right 10px
  
/*******************************
             picture
*******************************/
.product
  padding 4px
  border #ccc
  background white
  box-shadow: 0 10px 6px -6px #ccc;
#top-picture
  box-shadow: 0 10px 6px -6px #ccc;

#top-picture img
  border 0
  padding 0
  margin 0
  

img
  max-width 100% !important

.picture
  position relative
  display inline-block
  vertical-align middle
  max-width 100% !important
img.picture
  display block
  background white
  max-width 100% !important
.picture img
  display block
  max-width 100% !important
  height auto
  
#lightbox img
  max-width 98% !important
#lightbox
  max-width 100% !important   

/*--------------
     Rounded
---------------*/
.rounded.pictures .picture, .rounded.pictures img, .rounded.picture img, .rounded.picture
  border-radius 0.3125em
/*--------------
     Circular
---------------*/
.circular.pictures .picture, .circular.pictures img, .circular.picture img, .circular.picture
  border-radius 500rem
/*--------------
     Fluid
---------------*/
.fluid.pictures, .fluid.picture, .fluid.pictures img, .fluid.picture img
  display block
  width 100%
/*--------------
     Avatar
---------------*/
.avatar.pictures .picture, .avatar.pictures img, .avatar.picture img, .avatar.picture
  margin-right 0.5em
  display inline-block
  width 2em
  height 2em
  border-radius 500rem
/*-------------------
       Floated
--------------------*/
.floated.picture, .floated.pictures
  float left
  margin-right 1em
  margin-bottom 1em
.right.floated.pictures, .right.floated.picture
  float right
  margin-bottom 1em
  margin-left 1em
/*--------------
     Sizes
---------------*/
.tiny.pictures .picture, .tiny.pictures img, .tiny.picture
  width 20px
  font-size 0.7rem
.mini.pictures .picture, .mini.pictures img, .mini.picture
  width 35px
  font-size 0.8rem
.small.pictures .picture, .small.pictures img, .small.picture
  width 100px
  font-size 0.9rem
.medium.pictures .picture, .medium.pictures img, .medium.picture
  width 300px
  font-size 1rem
.large.pictures .picture, .large.pictures img, .large.picture
  width 450px
  font-size 1.1rem
.huge.pictures .picture, .huge.pictures img, .huge.picture
  width 600px
  font-size 1.2rem
/*******************************
              Groups
*******************************/
.pictures
  font-size 0em
  margin 0em -0.25rem 0rem
.pictures .picture, .pictures img
  display inline-block
  margin 0em 0.25em 0.5em
  max-width 100%
  
/*******************************
              Icons 
*******************************/

.circle i, icon-text, footer a
  transition all 1.4s ease-out

.circle
  i
    float left
    width 28px
    height 28px
    border-radius 100%
    background black
    color white
    font-size 18px
    text-align center
    padding 8px 4px 0px 4px

